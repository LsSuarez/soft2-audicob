@model Audicob.Models.Transaccion

@{
    ViewData["Title"] = "Comprobante de Pago";
}

<div class="container my-5">
    <div class="card shadow-lg p-4 rounded">
        <h2 class="text-center mb-4">Comprobante de Pago</h2>

        <!-- Información de la transacción -->
        <div class="mb-4">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Número de transacción:</strong> @Model.NumeroTransaccion</p>
                    <p><strong>Fecha:</strong> @Model.Fecha.ToString("dd/MM/yyyy HH:mm")</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Monto:</strong> $@Model.Monto.ToString("F2")</p>
                    <p><strong>Estado:</strong> @Model.Estado</p>
                </div>
            </div>

            <p><strong>Descripción:</strong> @Model.Descripcion</p>
        </div>

        <!-- Botones de acción -->
        <div class="d-flex justify-content-between mt-4">
            <a href="@Url.Action("ReenviarComprobante", "Abono", new { metodo = "email", transaccionId = Model.Id })" class="btn btn-success btn-lg">
                <i class="bi bi-envelope-fill"></i> Reenviar por Email
            </a>
            <a href="@Url.Action("ReenviarComprobante", "Abono", new { metodo = "whatsapp", transaccionId = Model.Id })" class="btn btn-warning btn-lg">
                <i class="bi bi-whatsapp"></i> Reenviar por WhatsApp
            </a>
            <a href="@Url.Action("EstadoCuenta", "Abono")" class="btn btn-primary btn-lg">
                <i class="bi bi-arrow-left-circle"></i> Volver al Estado de Cuenta
            </a>
        </div>
    </div>
</div>

<!-- Estilos adicionales para mejorar el diseño -->
@section Styles
{
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .container {
            max-width: 900px;
        }

        .card {
            background-color: #f8f9fa;
        }

        .btn-lg {
            padding: 12px 24px;
            font-size: 16px;
        }

        .bi {
            margin-right: 8px;
        }

        .card p {
            font-size: 16px;
            line-height: 1.5;
        }
        
        .text-center {
            text-align: center;
        }

        .btn-success, .btn-warning, .btn-primary {
            width: 30%;
        }

        .d-flex {
            display: flex;
            justify-content: space-between;
        }

        .mb-4 {
            margin-bottom: 1.5rem;
        }

        .my-5 {
            margin-top: 3rem;
            margin-bottom: 3rem;
        }

        .row > div {
            margin-bottom: 1rem;
        }

        .rounded {
            border-radius: 12px;
        }
    </style>
}

