@model List<Audicob.Models.Notificacion>
@using Audicob.Helpers

@{
    ViewData["Title"] = "Mis Notificaciones";
    var noLeidas = Model.Count(n => !n.Leida);
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>
                <i class="bi bi-bell-fill me-2"></i>
                Mis Notificaciones
            </h2>
            <p class="text-muted">Tienes @noLeidas notificaci√≥n(es) sin leer</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="ExportarPdf" class="btn btn-outline-danger me-2" title="Exportar a PDF">
                <i class="bi bi-file-pdf me-1"></i>
                Exportar PDF
            </a>
            @if (noLeidas > 0)
            {
                <form asp-action="MarcarTodasLeidas" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="bi bi-check-all me-1"></i>
                        Marcar todas como le√≠das
                    </button>
                </form>
            }
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Info"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="bi bi-info-circle me-2"></i>
            @TempData["Info"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-12">
            @if (!Model.Any())
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
                        <h4 class="mt-3 text-muted">No tienes notificaciones</h4>
                        <p class="text-muted">Las notificaciones aparecer√°n aqu√≠ cuando recibas nuevas actualizaciones</p>
                    </div>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="list-group list-group-flush">
                        @foreach (var notificacion in Model)
                        {
                            var claseNoLeida = notificacion.Leida ? "" : "bg-light border-start border-primary border-4";
                            var iconoClass = notificacion.Leida ? "text-muted" : "text-primary";
                            
                            <div class="list-group-item @claseNoLeida">
                                <div class="row align-items-center">
                                    <div class="col-auto">
                                        <span class="@iconoClass" style="font-size: 2rem;">
                                            @(notificacion.IconoTipo ?? "üìã")
                                        </span>
                                    </div>
                                    <div class="col">
                                        <div class="d-flex justify-content-between align-items-start mb-1">
                                            <h5 class="mb-1 @(notificacion.Leida ? "" : "fw-bold")">
                                                @notificacion.Titulo
                                            </h5>
                                            <small class="text-muted">
                                                @DateTimeHelper.ConvertToPeruTime(notificacion.FechaCreacion).ToString("dd/MM/yyyy HH:mm")
                                            </small>
                                        </div>
                                        <p class="mb-1">@notificacion.Descripcion</p>
                                        
                                        @if (notificacion.Cliente != null)
                                        {
                                            <small class="text-muted">
                                                <i class="bi bi-person me-1"></i>
                                                Cliente: @notificacion.Cliente.Nombre
                                            </small>
                                        }

                                        @if (!notificacion.Leida)
                                        {
                                            <div class="mt-2">
                                                <form asp-action="MarcarLeida" asp-route-id="@notificacion.Id" method="post" style="display: inline;">
                                                    <button type="submit" class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-check me-1"></i>
                                                        Marcar como le√≠da
                                                    </button>
                                                </form>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="mt-2">
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle me-1"></i>
                                                    Le√≠da @(notificacion.FechaLectura.HasValue ? DateTimeHelper.ConvertToPeruTime(notificacion.FechaLectura.Value).ToString("dd/MM/yyyy HH:mm") : "")
                                                </span>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .list-group-item {
        transition: all 0.2s;
    }

    .list-group-item:hover {
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }
</style>