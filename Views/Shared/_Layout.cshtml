<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AUDICOB ERP</title>

    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Estilos personalizados -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Audicob.styles.css" asp-append-version="true" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">AUDICOB ERP</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                    aria-controls="mainNav" aria-expanded="false" aria-label="Menú">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Ayuda">Ayuda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacidad</a>
                        </li>
                        @using Microsoft.AspNetCore.Identity
                        @inject SignInManager<ApplicationUser> SignInManager

                        @if (SignInManager.IsSignedIn(User))
                        {
                            @* --- CLIENTE --- *@
                            @if (User.IsInRole("Cliente"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Cliente" asp-action="DetalleDeudaTotal">
                                        Deudas
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Cliente" asp-action="MiPerfil">
                                        Mi Perfil
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Cliente" asp-action="MetodoPago">
                                        Metodos de Pago
                                    </a>
                                </li>
                            }
                            @* --- ASESOR --- *@
                            @if (User.IsInRole("AsesorCobranza"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Asesor" asp-action="HistorialCredito">
                                        Historial crediticio
                                    </a>
                                </li>
                            }

                            @* --- SUPERVISOR --- *@
                            @if (User.IsInRole("Supervisor"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="ClienteBusqueda" asp-action="Index">
                                        Evaluar situación financiera
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="AsigSupervisor" asp-action="Index">
                                        Segmentar clientes
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Supervisor" asp-action="GestionAsignacion">
                                        Gestionar la asignación
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Supervisor" asp-action="AsignarLineaCredito">
                                        Asignar Credito
                                    </a>
                                </li>
                                <li class="nav-item dropdown">
                                    @await Html.PartialAsync("_NotificacionesPartial")
                                </li>
                            }

                            @* --- ADMINISTRADOR (GERENTE) --- *@
                            @if (User.IsInRole("Administrador"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="ClienteGerente" asp-action="Index">
                                        Confirmar evaluación revisada
                                    </a>
                                </li>
                            }
                            @* --- CLIENTE --- *@
                            @if (User.IsInRole("Cliente"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="EstadoCuenta" asp-action="Index">
                                        <i class="bi bi-wallet2"></i> Monitorear estado de cuenta
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <!-- Mensajes del sistema -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
            </div>
        }

        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-light border-top py-3 mt-auto">
        <div class="container text-center text-muted small">
            &copy; 2025 - AUDICOB | <a asp-controller="Home" asp-action="Privacy">Política de Privacidad</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>