<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AUDICOB </title>

    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <!-- Estilos personalizados -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Audicob.styles.css" asp-append-version="true" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-chart-line me-2"></i>AUDICOB
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                    aria-controls="mainNav" aria-expanded="false" aria-label="Menú">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <!-- Navegación general -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Inicio
                            </a>
                        </li>

                        @using Microsoft.AspNetCore.Identity
                        @inject SignInManager<ApplicationUser> SignInManager

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <!-- CLIENTE -->
                            @if (User.IsInRole("Cliente"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="clienteDropdown" role="button" 
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-user-circle me-1"></i>Mi Cuenta
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="clienteDropdown">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Cliente" asp-action="Dashboard">
                                                <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("EstadoCuenta", "Cliente")">
                                                <i class="fas fa-file-invoice-dollar me-2"></i>Estado de Cuenta
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Cliente" asp-action="DetalleDeudaTotal">
                                                <i class="fas fa-credit-card me-2"></i>Gestionar Deudas
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Cliente" asp-action="MetodoPago">
                                                <i class="fas fa-wallet me-2"></i>Métodos de Pago
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Cliente" asp-action="MiPerfil">
                                                <i class="fas fa-id-card me-2"></i>Mi Perfil
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }

                            <!-- ASESOR DE COBRANZA -->
                            @if (User.IsInRole("AsesorCobranza"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="asesorDropdown" role="button" 
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-hand-holding-usd me-1"></i>Cobranza
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="asesorDropdown">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Asesor" asp-action="HistorialCredito">
                                                <i class="fas fa-history me-2"></i>Historial Crediticio
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Asesor" asp-action="Index">
                                                <i class="fas fa-users me-2"></i>Gestión de Clientes
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }

                            <!-- SUPERVISOR -->
                            @if (User.IsInRole("Supervisor"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="supervisorDropdown" role="button" 
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-user-shield me-1"></i>Supervisión
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="supervisorDropdown">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Supervisor" asp-action="Dashboard">
                                                <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                                            </a>
                                        </li>
                                        <!-- NUEVO: Métricas de Desempeño -->
                                        <li>
                                            <a class="dropdown-item" asp-controller="Supervisor" asp-action="MetricasDesempeno">
                                                <i class="fas fa-chart-line me-2"></i>Métricas de Desempeño
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="ClienteBusqueda" asp-action="Index">
                                                <i class="fas fa-chart-bar me-2"></i>Evaluar Situación Financiera
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="AsigSupervisor" asp-action="Index">
                                                <i class="fas fa-sitemap me-2"></i>Segmentar Clientes
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Supervisor" asp-action="GestionAsignacion">
                                                <i class="fas fa-tasks me-2"></i>Gestionar Asignación
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Supervisor" asp-action="AsignarLineaCredito">
                                                <i class="fas fa-credit-card me-2"></i>Asignar Línea de Crédito
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Supervisor" asp-action="ModificarEstado">
                                                <i class="fas fa-edit me-2"></i>Modificar Estado Cartera
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Supervisor" asp-action="FiltrarMora">
                                                <i class="fas fa-filter me-2"></i>Filtrar Mora
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Supervisor" asp-action="ReporteMora">
                                                <i class="fas fa-chart-pie me-2"></i>Reporte Morosidad
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Supervisor" asp-action="EvaluacionesPendientes">
                                                <i class="fas fa-clipboard-list me-2"></i>Evaluaciones Pendientes
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            @await Html.PartialAsync("_NotificacionesPartial")
                                        </li>
                                    </ul>
                                </li>
                            }

                            <!-- ADMINISTRADOR (GERENTE) -->
                            @if (User.IsInRole("Administrador"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" 
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-cogs me-1"></i>Administración
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                        <li>
                                            <a class="dropdown-item" asp-controller="ClienteGerente" asp-action="Index">
                                                <i class="fas fa-check-double me-2"></i>Confirmar Evaluaciones
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Validation" asp-action="Index">
                                                <i class="fas fa-check-circle me-2"></i>Validar Pagos
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Reportes" asp-action="Index">
                                                <i class="fas fa-chart-pie me-2"></i>Reportes
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }
                        }

                        <!-- Enlaces generales para todos los usuarios -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Ayuda">
                                <i class="fas fa-question-circle me-1"></i>Ayuda
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-shield-alt me-1"></i>Privacidad
                            </a>
                        </li>
                    </ul>
                    
                    <!-- Usuario y login -->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <!-- Mensajes del sistema -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
            </div>
        }

        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-light border-top py-3 mt-auto">
        <div class="container text-center text-muted small">
            <i class="fas fa-copyright me-1"></i> 2025 - AUDICOB ERP | 
            <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Política de Privacidad</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>