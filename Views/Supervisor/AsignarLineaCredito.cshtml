@using System.Linq
@{
    Layout = "_Layout";
    ViewData["Title"] = "Asignar Línea de Crédito";
    var clientes = ViewBag.Clientes as IEnumerable<dynamic>;
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-4">@TempData["Error"]</div>
    TempData["Error"] = null; // Limpia TempData después de mostrar
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success mt-4">@TempData["Success"]</div>
    TempData["Success"] = null; // Limpia TempData después de mostrar
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="mb-4">Asignar Línea de Crédito</h2>
            <form asp-action="AsignarLineaCredito" method="post">
                <div class="mb-3">
                    <label class="form-label">Cliente</label>
                    @if (clientes != null && clientes.Count() > 0)
                    {
                        <select name="clienteId" class="form-control">
                            <option value="">Seleccione un cliente</option>
                            @foreach (var c in clientes)
                            {
                                <option value="@c.Id">@c.Nombre</option>
                            }
                        </select>
                    }
                    else
                    {
                        <div class="alert alert-warning">No hay clientes disponibles.</div>
                    }
                </div>
                <div class="mb-3">
                    <label class="form-label">Monto a Asignar</label>
                    <input name="monto" type="number" step="0.01" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-primary">Asignar Crédito</button>
            </form>
        </div>
    </div>
</div>