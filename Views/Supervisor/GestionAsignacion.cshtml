        </button>
    </form>
}
<div class="text-center mt-4">
    <button id="btnReportesAnteriores" class="btn btn-outline-primary">
        Ver Reportes Anteriores
    </button>
</div>

<div id="contenedorReportes" class="mt-3"></div>

@section Scripts {
    <script>
        document.getElementById("btnReportesAnteriores").addEventListener("click", function () {
            fetch('@Url.Action("ReportesAnteriores", "Supervisor")')
                .then(response => response.text())
                .then(html => {
                    document.getElementById("contenedorReportes").innerHTML = html;
                });
        });
    </script>
}
