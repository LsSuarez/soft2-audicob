@model Audicob.Models.ViewModels.Supervisor.ReporteMoraViewModel

@{
    ViewData["Title"] = "Reporte de Morosidad";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title">
                        <i class="fas fa-chart-bar me-2"></i>Reporte de Morosidad
                    </h3>
                    <div class="card-tools">
                        <form method="post" asp-action="ExportarReporteMoraPdf" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-light">
                                <i class="fas fa-download me-1"></i>Exportar PDF
                            </button>
                        </form>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Estadísticas Generales -->
                    <div class="row mb-4">
                        <div class="col-md-3 col-sm-6">
                            <div class="info-box bg-info">
                                <span class="info-box-icon"><i class="fas fa-users"></i></span>
                                <div class="info-box-content">
                                    <span class="info-box-text">Total Clientes</span>
                                    <span class="info-box-number">@Model.TotalClientes</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <div class="info-box bg-success">
                                <span class="info-box-icon"><i class="fas fa-check-circle"></i></span>
                                <div class="info-box-content">
                                    <span class="info-box-text">Clientes al Día</span>
                                    <span class="info-box-number">@Model.ClientesAlDia</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <div class="info-box bg-warning">
                                <span class="info-box-icon"><i class="fas fa-exclamation-triangle"></i></span>
                                <div class="info-box-content">
                                    <span class="info-box-text">Clientes en Mora</span>
                                    <span class="info-box-number">@(Model.TotalClientes - Model.ClientesAlDia)</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <div class="info-box bg-danger">
                                <span class="info-box-icon"><i class="fas fa-money-bill-wave"></i></span>
                                <div class="info-box-content">
                                    <span class="info-box-text">Deuda Total</span>
                                    <span class="info-box-number">S/ @Model.MontoTotalDeuda.ToString("N2")</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Distribución por Estado de Mora -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">Distribución por Estado de Mora</h4>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-2 col-sm-4 text-center">
                                            <div class="border rounded p-3 bg-success bg-opacity-10">
                                                <h5 class="text-success">Al Día</h5>
                                                <h4>@Model.ClientesAlDia</h4>
                                                <small>@Model.MontoAlDia.ToString("C")</small>
                                            </div>
                                        </div>
                                        <div class="col-md-2 col-sm-4 text-center">
                                            <div class="border rounded p-3 bg-warning bg-opacity-10">
                                                <h5 class="text-warning">Temprana</h5>
                                                <h4>@Model.ClientesMoraTemprana</h4>
                                                <small>@Model.MontoMoraTemprana.ToString("C")</small>
                                            </div>
                                        </div>
                                        <div class="col-md-2 col-sm-4 text-center">
                                            <div class="border rounded p-3 bg-info bg-opacity-10">
                                                <h5 class="text-info">Moderada</h5>
                                                <h4>@Model.ClientesMoraModerada</h4>
                                                <small>@Model.MontoMoraModerada.ToString("C")</small>
                                            </div>
                                        </div>
                                        <div class="col-md-2 col-sm-4 text-center">
                                            <div class="border rounded p-3 bg-danger bg-opacity-10">
                                                <h5 class="text-danger">Grave</h5>
                                                <h4>@Model.ClientesMoraGrave</h4>
                                                <small>@Model.MontoMoraGrave.ToString("C")</small>
                                            </div>
                                        </div>
                                        <div class="col-md-2 col-sm-4 text-center">
                                            <div class="border rounded p-3 bg-dark bg-opacity-10">
                                                <h5 class="text-dark">Crítica</h5>
                                                <h4>@Model.ClientesMoraCritica</h4>
                                                <small>@Model.MontoMoraCritica.ToString("C")</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Porcentajes -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">Porcentaje de Clientes en Mora</h4>
                                </div>
                                <div class="card-body">
                                    <div class="progress" style="height: 30px;">
                                        <div class="progress-bar bg-danger" role="progressbar" 
                                             style="width: @Model.PorcentajeClientesEnMora%;" 
                                             aria-valuenow="@Model.PorcentajeClientesEnMora" 
                                             aria-valuemin="0" 
                                             aria-valuemax="100">
                                            @Model.PorcentajeClientesEnMora.ToString("N1")%
                                        </div>
                                    </div>
                                    <small class="text-muted">@(Model.TotalClientes - Model.ClientesAlDia) de @Model.TotalClientes clientes en mora</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">Porcentaje de Monto en Mora</h4>
                                </div>
                                <div class="card-body">
                                    <div class="progress" style="height: 30px;">
                                        <div class="progress-bar bg-warning" role="progressbar" 
                                             style="width: @Model.PorcentajeMontoEnMora%;" 
                                             aria-valuenow="@Model.PorcentajeMontoEnMora" 
                                             aria-valuemin="0" 
                                             aria-valuemax="100">
                                            @Model.PorcentajeMontoEnMora.ToString("N1")%
                                        </div>
                                    </div>
                                    <small class="text-muted">S/ @((Model.MontoTotalDeuda - Model.MontoAlDia).ToString("N2")) de S/ @Model.MontoTotalDeuda.ToString("N2") en mora</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Clientes con Mayor Deuda -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">Top 10 - Clientes con Mayor Deuda</h4>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-hover">
                                            <thead class="table-dark">
                                                <tr>
                                                    <th>Cliente</th>
                                                    <th>Documento</th>
                                                    <th>Estado</th>
                                                    <th>Deuda Total</th>
                                                    <th>Días en Mora</th>
                                                    <th>Ingresos</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var cliente in Model.ClientesMayorDeuda)
                                                {
                                                    <tr>
                                                        <td>@cliente.Nombre</td>
                                                        <td>@cliente.Documento</td>
                                                        <td>
                                                            <span class="badge bg-@cliente.ColorEstado">
                                                                @cliente.EstadoMora
                                                            </span>
                                                        </td>
                                                        <td class="text-danger fw-bold">S/ @cliente.DeudaTotal.ToString("N2")</td>
                                                        <td>
                                                            <span class="badge @(cliente.DiasEnMora > 60 ? "bg-danger" : cliente.DiasEnMora > 30 ? "bg-warning" : "bg-info")">
                                                                @cliente.DiasEnMora días
                                                            </span>
                                                        </td>
                                                        <td>S/ @cliente.IngresosMensuales.ToString("N2")</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Evolución Mensual -->
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">Evolución de la Morosidad (Últimos 6 Meses)</h4>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-bordered">
                                            <thead class="table-primary">
                                                <tr>
                                                    <th>Mes</th>
                                                    <th>Total Clientes</th>
                                                    <th>Clientes en Mora</th>
                                                    <th>Porcentaje en Mora</th>
                                                    <th>Monto en Mora</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var mes in Model.EvolucionMensual)
                                                {
                                                    <tr>
                                                        <td class="fw-bold">@mes.NombreMes</td>
                                                        <td>@mes.TotalClientes</td>
                                                        <td class="text-danger">@mes.ClientesEnMora</td>
                                                        <td>
                                                            <span class="badge bg-@(mes.PorcentajeMora > 50 ? "danger" : mes.PorcentajeMora > 25 ? "warning" : "success")">
                                                                @mes.PorcentajeMora.ToString("N1")%
                                                            </span>
                                                        </td>
                                                        <td class="text-danger fw-bold">S/ @mes.MontoTotalMora.ToString("N2")</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Inicializar tooltips si es necesario
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}
