@model Audicob.Models.ViewModels.Supervisor.ValidacionPagoViewModel
@{
    ViewData["Title"] = "Validar Pago";
}
<h2 class="mb-4">Validar Pago del Cliente</h2>
<p class="lead">Confirma si el pago realizado por el cliente es válido y registra observaciones si es necesario.</p>

<form asp-action="ValidarPago" method="post">
    <input type="hidden" asp-for="PagoId" />

    <div class="mb-3">
        <label class="form-label">Cliente</label>
        <input class="form-control" value="@Model.NombreCliente" readonly />
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label class="form-label">Fecha del Pago</label>
            <input class="form-control" value="@Model.FechaPago.ToShortDateString()" readonly />
        </div>
        <div class="col-md-6">
            <label class="form-label">Monto</label>
            <input class="form-control" value="@Model.Monto.ToString("C")" readonly />
        </div>
    </div>

    <div class="mb-3 form-check">
        <input asp-for="Validado" class="form-check-input" />
        <label asp-for="Validado" class="form-check-label">Pago Validado</label>
    </div>

    <div class="mb-3">
        <label asp-for="Observacion" class="form-label">Observación</label>
        <textarea asp-for="Observacion" class="form-control" rows="3" placeholder="Comentarios sobre el pago..."></textarea>
        <span asp-validation-for="Observacion" class="text-danger small"></span>
    </div>

    <button type="submit" class="btn btn-success">
        <i class="bi bi-check-circle me-1"></i> Confirmar Validación
    </button>
    <a asp-action="Dashboard" class="btn btn-outline-secondary ms-2">
        <i class="bi bi-arrow-left-circle me-1"></i> Cancelar
    </a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
