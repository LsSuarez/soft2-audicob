@if (ViewBag.Pagados != null)
{
    <div class="alert alert-secondary">
        <strong>Pagados:</strong> @ViewBag.Pagados% <br />
        <strong>Pendientes:</strong> @ViewBag.Pendientes%
    </div>

    <canvas id="graficoPagos" style="max-width: 400px;"></canvas>

    <input type="hidden" id="valorPagados" value="@ViewBag.Pagados" />
    <input type="hidden" id="valorPendientes" value="@ViewBag.Pendientes" />
}
