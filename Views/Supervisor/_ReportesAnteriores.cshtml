@model IEnumerable<Audicob.Models.ReporteAsignacion>

<div class="card mt-3">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">ðŸ“œ Reportes Anteriores</h5>
    </div>

    <div class="card-body">
        @if (!Model.Any())
        {
            <p class="text-muted">No hay reportes registrados.</p>
        }
        else
        {
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4 mb-3">
                        <div class="card shadow-sm p-3">
                            <strong>Asesor:</strong> @item.AsesorNombre <br />
                            <strong>Fecha:</strong> @item.FechaRegistro.ToLocalTime().ToString("dd/MM/yyyy HH:mm") <br />
                            <strong>Cuentas:</strong> @item.CantidadCuentas <br />
                            <strong>Monto:</strong> S/ @item.MontoTotal <br />
                            <strong>Responsable:</strong> @item.Responsable
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
